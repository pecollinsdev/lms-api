# application identity & environment
APP_NAME=YourApiName
APP_ENV=local           # local, staging, production…
APP_KEY=base64:…        # generated via php artisan key:generate
APP_DEBUG=true          # disable in production
APP_URL=http://localhost   # your API’s base URL

# logging (you can leave at the default “stack”)
LOG_CHANNEL=stack
LOG_LEVEL=debug

# database (switch to mysql if you’re not using sqlite)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lms_api
DB_USERNAME=your_user
DB_PASSWORD=your_pass

# cache (file is fine for most small projects)
CACHE_DRIVER=file

# queue (only if you plan to queue jobs—otherwise you can delete this)
QUEUE_CONNECTION=sync

# session (since it’s stateless you won’t use sessions—delete if you like)
# SESSION_DRIVER=database
# SESSION_LIFETIME=120

# JWT secret (firebase)
JWT_SECRET=base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
JWT_TTL=120
JWT_ALGO=HS256
